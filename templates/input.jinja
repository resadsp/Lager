        <label for="D80x300">D80x300<span class="red-text">*</span>:</label>
        <input type="text" id="D80x300" name="D80x300" required>
    </div>
    <div class="form-group">
        <label for="D120x200">D120x200<span class="red-text">*</span>:</label>
        <input type="text" id="D120x200" name="D120x200" required>
    </div>
    <div class="form-group">
        <label for="D160x230">D160x230<span class="red-text">*</span>:</label>
        <input type="text" id="D160x230" name="D160x230" required>
    </div>
    <div class="form-group">
